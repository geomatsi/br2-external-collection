+#include "sun8i-h3-orangepi-pc-plus.dts"
+
+/ {
+	model = "Xunlong Orange Pi PC Plus with camera sensor ov2640";
+	compatible = "xunlong,orangepi-pc-plus", "allwinner,sun8i-h3";
+
+	cam_dovdd_reg_1v8: camera-dovdd {
+		compatible = "regulator-fixed";
+		regulator-name = "camera_dovdd";
+		regulator-min-microvolt = <1800000>;
+		regulator-max-microvolt = <1800000>;
+		gpio = <&pio 0 17 GPIO_ACTIVE_HIGH>;	/* CSI-PWR-EN (PA17) */
+		startup-delay-us = <100000>;
+		enable-active-high;
+	};
+
+	cam_avdd_reg_2v8: camera-avdd {
+		compatible = "regulator-fixed";
+		regulator-name = "camera_avdd";
+		regulator-min-microvolt = <2800000>;
+		regulator-max-microvolt = <2800000>;
+		gpio = <&pio 6 13 GPIO_ACTIVE_HIGH>;	/* AFCC_EN (PG13) */
+		startup-delay-us = <100000>;
+		enable-active-high;
+	};
+
+	cam_dvdd_reg_1v5: camera-dvdd {
+		compatible = "regulator-fixed";
+		regulator-name = "camera_dvdd";
+		regulator-min-microvolt = <1500000>;
+		regulator-max-microvolt = <1500000>;
+		gpio = <&pio 6 11 GPIO_ACTIVE_HIGH>;	/* CSI_EN (PG11) */
+		startup-delay-us = <100000>;
+		enable-active-high;
+	};
+};
+
+&csi {
+	status = "okay";
+
+	port {
+		#address-cells = <1>;
+		#size-cells = <0>;
+
+		csi_ep: endpoint {
+			remote-endpoint = <&ov2640_ep>;
+			bus-width = <8>;
+			hsync-active = <0>;
+			vsync-active = <0>;
+			pclk-sample = <1>;
+		};
+	};
+};
+
+&i2c1 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&i2c1_pins>;
+	status = "okay";
+};
+
+&i2c2_pins {
+	drive-strength = <40>;
+	bias-pull-up;
+};
+
+&i2c2 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&i2c2_pins>;
+	status = "okay";
+
+	ov2640: camera@30 {
+		compatible = "ovti,ov2640";
+		status = "okay";
+		reg = <0x30>;
+
+		pinctrl-names = "default";
+		pinctrl-0 = <&csi_mclk_pin>;
+
+		clocks = <&ccu CLK_CSI_MCLK>;
+		clock-names = "xvclk";
+
+		DOVDD-supply = <&cam_dovdd_reg_1v8>;
+		DVDD-supply = <&cam_dvdd_reg_1v5>;
+		AVDD-supply = <&cam_avdd_reg_2v8>;
+
+		resetb-gpios = <&pio 4 14 GPIO_ACTIVE_LOW>;	/* CSI-RESET# (PE14) */
+		pwdn-gpios = <&pio 4 15 GPIO_ACTIVE_HIGH>;	/* CSI-STBY-EN (PE15) */
+
+		port {
+			ov2640_ep: endpoint {
+				remote-endpoint = <&csi_ep>;
+				bus-width = <8>;
+				hsync-active = <0>;
+				vsync-active = <0>;
+				pclk-sample = <1>;
+			};
+		};
+	};
+};
